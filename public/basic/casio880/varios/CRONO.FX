5 REM (BY JUAN LUIS GIMENEZ NAVARRO)
10 CONT=0:CONT1=1
20 K=294
30 VER=5
35 PRINT "CUANTOS SEGUNDOS? <";:PRINT S;
40 INPUT ">",S:FIN=S*K
41 FOR I=1 TO(K*3):NEXT I
42 BEEP 1
45 FOR I=1 TO K:NEXT I
47 IF CONT1 > VER THEN CONT1=1
48 CONT=CONT+1
50 IF CONT1 = VER THEN PRINT CONT;:CONT1=VER+1
60 IF CONT1 < VER THEN PRINT ".";:CONT1=CONT1+1
70 IF CONT < S THEN GOTO 45
200 BEEP 0
210 PRINT "FIN";:PRINT:GOTO 10

